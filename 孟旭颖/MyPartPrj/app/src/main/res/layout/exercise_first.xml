<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="#F5F5F5"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_stem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:layout_gravity="center">
                <ImageView
                    android:id="@+id/iv_opt1"
                    android:layout_width="25dp"
                    android:layout_height="25dp" />

                <LinearLayout
                    android:id="@+id/ll_optA"
                    android:layout_gravity="center"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/item_style">
                    <TextView
                        android:layout_margin="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#777"
                        android:text="A"
                        android:textSize="25sp"/>
                    <TextView
                        android:id="@+id/tv_optA"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#777"
                        android:textSize="20dp"
                        android:layout_gravity="center"/>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:layout_gravity="center">
                <ImageView
                    android:id="@+id/iv_opt2"
                    android:layout_width="25dp"
                    android:layout_height="25dp" />
                <LinearLayout
                    android:id="@+id/ll_optB"
                    android:layout_gravity="center"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/item_style">
                    <TextView
                        android:layout_margin="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="B"
                        android:textColor="#777"
                        android:textSize="25sp"/>
                    <TextView
                        android:id="@+id/tv_optB"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#777"
                        android:textSize="20dp"
                        android:layout_gravity="center"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:layout_gravity="center">
                <ImageView
                    android:id="@+id/iv_opt3"
                    android:layout_width="25dp"
                    android:layout_height="25dp" />
                <LinearLayout
                    android:id="@+id/ll_optC"
                    android:layout_gravity="center"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/item_style">
                    <TextView
                        android:layout_margin="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="C"
                        android:textColor="#777"
                        android:textSize="25sp"/>
                    <TextView
                        android:id="@+id/tv_optC"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:textColor="#777"
                        android:layout_gravity="center"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:layout_gravity="center">
                <ImageView
                    android:id="@+id/iv_opt4"
                    android:layout_width="25dp"
                    android:layout_height="25dp" />
                <LinearLayout
                    android:id="@+id/ll_optD"
                    android:layout_gravity="center"
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/item_style">
                    <TextView
                        android:layout_margin="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="D"
                        android:textColor="#777"
                        android:textSize="25sp"/>
                    <TextView
                        android:id="@+id/tv_optD"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="20dp"
                        android:textColor="#777"
                        android:layout_gravity="center"/>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="25dp"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_antitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#777"
                    android:textSize="20dp"/>
                <TextView
                    android:id="@+id/tv_analysis"
                    android:layout_gravity="center"
                    android:layout_width="300dp"
                    android:textColor="#777"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"/>

            </LinearLayout>

            </LinearLayout>

        </LinearLayout>




</ScrollView>